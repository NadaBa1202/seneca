# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Riot Games API Configuration
RIOT_API_KEY=your_riot_api_key_here
RIOT_BASE_URL=https://na1.api.riotgames.com
RIOT_RATE_LIMIT_REQUESTS_PER_SECOND=20
RIOT_RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Redis Configuration for Caching
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_TTL=3600

# Application Configuration
APP_NAME=LoL Companion App
APP_VERSION=1.0.0
DEBUG=True
LOG_LEVEL=INFO

# Data Paths
DRAGONTAIL_DATA_PATH=../15.18.1
MODEL_CACHE_DIR=./models
APP_CACHE_DIR=./cache

# NLP Model Configuration
HUGGINGFACE_CACHE_DIR=./models/huggingface
MODEL_DOWNLOAD_TIMEOUT=300
USE_GPU=True
MAX_SEQUENCE_LENGTH=512

# Streamlit Configuration
STREAMLIT_PORT=8501
STREAMLIT_HOST=localhost
STREAMLIT_AUTO_RELOAD=True

# API Rate Limiting
API_CACHE_DURATION=300
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30

# Feature Flags
ENABLE_PRO_MATCHES=True
ENABLE_SENTIMENT_ANALYSIS=True
ENABLE_REAL_TIME_UPDATES=True
ENABLE_CHATBOT=True

# External Services (Optional)
TWITCH_CLIENT_ID=
TWITCH_CLIENT_SECRET=
DISCORD_BOT_TOKEN=

# Database Configuration (if using persistent storage)
DATABASE_URL=sqlite:///./lol_companion.db

# Logging Configuration
LOG_FILE=./logs/app.log
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=30
