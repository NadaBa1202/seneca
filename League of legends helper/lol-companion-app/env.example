# League of Legends Companion App Configuration
# Copy this file to .env and fill in your actual values

# Riot Games API Configuration
RIOT_API_KEY=your_riot_api_key_here
RIOT_BASE_URL=https://na1.api.riotgames.com
RIOT_RATE_LIMIT_REQUESTS_PER_SECOND=20
RIOT_RATE_LIMIT_REQUESTS_PER_MINUTE=100
REQUEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=10

# Cache Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_TTL=3600
API_CACHE_DURATION=300

# Data Paths
DRAGONTAIL_DATA_PATH=../15.18.1
MODEL_CACHE_DIR=./models
APP_CACHE_DIR=./cache
HUGGINGFACE_CACHE_DIR=./models/huggingface

# Machine Learning Configuration
MODEL_DOWNLOAD_TIMEOUT=300
USE_GPU=true
MAX_SEQUENCE_LENGTH=512
BATCH_SIZE=16

# Model Names
QA_MODEL_NAME=deepset/roberta-base-squad2
SUMMARIZATION_MODEL_NAME=facebook/bart-large-cnn
SENTIMENT_MODEL_NAME=cardiffnlp/twitter-roberta-base-sentiment-latest

# Streamlit Configuration
STREAMLIT_PORT=8501
STREAMLIT_HOST=localhost
STREAMLIT_AUTO_RELOAD=true
PAGE_TITLE=LoL Companion App
PAGE_ICON=⚔️

# Feature Flags
ENABLE_PRO_MATCHES=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_CHATBOT=true
ENABLE_LIVE_MATCH_TRACKING=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=30

# External Services (Optional)
TWITCH_CLIENT_ID=
TWITCH_CLIENT_SECRET=
DISCORD_BOT_TOKEN=

# Application Configuration
APP_NAME=LoL Companion App
APP_VERSION=1.0.0
DEBUG=false
